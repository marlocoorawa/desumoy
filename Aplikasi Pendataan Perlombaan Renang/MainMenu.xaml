<Window x:Class="Aplikasi_Pendataan_Perlombaan_Renang.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource withStyle}"
        Title="Aplikasi Pendataan Perlombaan Renang">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0">
            <Rectangle.Fill>
                <SolidColorBrush Color="{StaticResource palleteBlue1}"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Style="{StaticResource headerStyle}">
            Aplikasi Pendaataan Perlombaan Renang
        </TextBlock>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center">
            <Button Width="200" Height="40" FontSize="14" Margin="0,20,0,10">Pendaftaran Peserta</Button>
            <Button Width="200" Height="40" FontSize="14" Margin="0,10,0,10" Click="buatPerlombaan">Buat Perlombaan</Button>
            <Button Width="200" Height="40" FontSize="14" Margin="0,10,0,10">Lihat Perlombaan</Button>
            <Button Width="200" Height="40" FontSize="14" Margin="0,10,0,20" Click="exit">Exit</Button>
        </StackPanel>
    </Grid>
</Window>